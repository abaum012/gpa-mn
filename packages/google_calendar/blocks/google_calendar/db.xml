<?xml version="1.0" encoding="UTF-8"?>
<schema
    xmlns="http://www.concrete5.org/doctrine-xml/0.5"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">

    <table name="btEventCalendar">
        <field name="bID" type="integer">
            <unsigned/>
            <key/>
        </field>
        <field name="calendars" type="text"/>
        <field name="displayWeekends" type="boolean">
            <unsigned/>
            <default value="1"/>
            <notnull/>
        </field>
        <field name="monthView" type="boolean">
            <unsigned/>
            <default value="1"/>
            <notnull/>
        </field>
        <field name="weekView" type="boolean">
            <unsigned/>
            <default value="1"/>
            <notnull/>
        </field>
        <field name="dayView" type="boolean">
            <unsigned/>
            <default value="0"/>
            <notnull/>
        </field>
    </table>
</schema>